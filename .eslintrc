env:
  browser: false
  es2021: true
  mocha: true
  node: true

extends:
  - "eslint:recommended"
  - "plugin:prettier/recommended"

parserOptions:
  ecmaVersion: 12
  sourceType: module

plugins:
  - "prettier"

rules:
  # Error Prevention
  no-console: "warn"
  no-unused-vars:
    - "error"
    - argsIgnorePattern: "^_"
      varsIgnorePattern: "^_"
  no-undef: "error"
  no-unreachable: "error"

  # Best Practices
  eqeqeq: ["error", "always"]
  no-eval: "error"
  no-implied-eval: "error"
  no-new-func: "error"
  no-return-await: "error"
  require-await: "warn"

  # Code Style
  camelcase: ["warn", { properties: "never" }]
  consistent-return: "warn"
  curly: ["error", "all"]
  dot-notation: "warn"

  # Prettier Integration
  prettier/prettier: "error"

  # Security
  no-new-require: "error"
  no-path-concat: "error"

overrides:
  - files:
      - "hardhat.config.js"
      - "scripts/**/*.js"
    rules:
      no-console: "off"
