{
  "name": "food-safety-reporting-system",
  "version": "1.0.0",
  "description": "A privacy-preserving food safety reporting platform powered by Fully Homomorphic Encryption (FHE) technology, enabling anonymous whistleblowing while maintaining data integrity and regulatory oversight.",
  "main": "index.js",
  "scripts": {
    "compile": "hardhat compile",
    "test": "hardhat test",
    "test:coverage": "hardhat coverage",
    "test:gas": "REPORT_GAS=true hardhat test",
    "node": "hardhat node",
    "deploy:local": "hardhat run scripts/deploy.js --network localhost",
    "deploy:sepolia": "hardhat run scripts/deploy.js --network sepolia",
    "verify:sepolia": "hardhat run scripts/verify.js --network sepolia",
    "interact:local": "hardhat run scripts/interact.js --network localhost",
    "interact:sepolia": "hardhat run scripts/interact.js --network sepolia",
    "simulate:local": "hardhat run scripts/simulate.js --network localhost",
    "clean": "hardhat clean",
    "lint": "npm run lint:sol && npm run prettier:check",
    "lint:sol": "solhint \"contracts/**/*.sol\"",
    "lint:fix": "solhint 'contracts/**/*.sol' --fix && prettier --write .",
    "prettier:check": "prettier --check .",
    "prettier:write": "prettier --write .",
    "format": "prettier --write .",
    "size": "hardhat size-contracts",
    "prepare": "husky",
    "lint:js": "eslint .",
    "lint:all": "npm run lint:sol && npm run lint:js && npm run prettier:check",
    "security:check": "npm audit --audit-level=moderate",
    "security:fix": "npm audit fix",
    "analyze": "npm run lint:all && npm run security:check"
  },
  "lint-staged": {
    "*.sol": [
      "solhint",
      "prettier --write"
    ],
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "keywords": [
    "blockchain",
    "ethereum",
    "solidity",
    "hardhat",
    "fhe",
    "privacy",
    "food-safety",
    "whistleblowing",
    "smart-contracts",
    "zama"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^2.1.0",
    "@nomicfoundation/hardhat-ethers": "^3.1.1",
    "@nomicfoundation/hardhat-ignition": "^0.15.14",
    "@nomicfoundation/hardhat-ignition-ethers": "^0.15.15",
    "@nomicfoundation/hardhat-network-helpers": "^1.1.1",
    "@nomicfoundation/hardhat-toolbox": "^6.1.0",
    "@nomicfoundation/hardhat-verify": "^2.1.2",
    "@nomicfoundation/ignition-core": "^0.15.14",
    "@typechain/ethers-v6": "^0.5.1",
    "@typechain/hardhat": "^9.1.0",
    "@types/chai": "^4.3.20",
    "@types/mocha": "^10.0.10",
    "@types/node": "^20.19.24",
    "chai": "^4.5.0",
    "dotenv": "^17.2.3",
    "eslint": "^9.38.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "hardhat": "^2.26.4",
    "hardhat-gas-reporter": "^2.3.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "prettier": "^3.6.2",
    "prettier-plugin-solidity": "^2.1.0",
    "solhint": "^6.0.1",
    "solidity-coverage": "^0.8.16",
    "ts-node": "^10.9.2",
    "typechain": "^8.3.2",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@fhevm/solidity": "^0.8.0",
    "@zama-fhe/oracle-solidity": "^0.2.0",
    "ethers": "^6.15.0"
  }
}
