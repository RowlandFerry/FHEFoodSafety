# ============================================
# PRIVATE KEYS & SECURITY
# ============================================
# WARNING: Never commit your actual private key!
# Use a dedicated deployment wallet with limited funds
PRIVATE_KEY=your_private_key_here

# Multi-sig wallet address (optional for production)
MULTISIG_ADDRESS=your_multisig_address_here

# Emergency pause configuration
PAUSER_ADDRESS=your_pauser_address_here
PAUSER_PRIVATE_KEY=your_pauser_private_key_here

# ============================================
# NETWORK CONFIGURATION
# ============================================

# Sepolia Testnet
SEPOLIA_RPC_URL=https://eth-sepolia.g.alchemy.com/v2/your-api-key
SEPOLIA_CHAIN_ID=11155111

# Ethereum Mainnet (for production)
MAINNET_RPC_URL=https://eth-mainnet.g.alchemy.com/v2/your-api-key
MAINNET_CHAIN_ID=1

# Local Development
LOCALHOST_RPC_URL=http://127.0.0.1:8545
LOCALHOST_CHAIN_ID=31337

# ============================================
# API KEYS
# ============================================

# Etherscan for contract verification
# Get your API key from https://etherscan.io/myapikey
ETHERSCAN_API_KEY=your_etherscan_api_key_here

# Alchemy API Key (alternative to RPC URLs above)
ALCHEMY_API_KEY=your_alchemy_api_key_here

# Infura API Key (alternative to Alchemy)
INFURA_API_KEY=your_infura_api_key_here

# ============================================
# GAS & PERFORMANCE
# ============================================

# Enable gas reporting during tests
REPORT_GAS=false

# CoinMarketCap API Key for USD gas cost reporting
# Get your API key from https://coinmarketcap.com/api/
COINMARKETCAP_API_KEY=your_coinmarketcap_api_key_here

# Gas price in gwei (for manual override)
GAS_PRICE=20

# Gas limit for transactions
GAS_LIMIT=8000000

# Enable contract size checking
CONTRACT_SIZER=false

# ============================================
# DEPLOYMENT CONFIGURATION
# ============================================

# Deployment environment (development, staging, production)
DEPLOYMENT_ENV=development

# Number of confirmations to wait after deployment
DEPLOYMENT_CONFIRMATIONS=5

# Enable deployment verification
AUTO_VERIFY=true

# ============================================
# MONITORING & ALERTS
# ============================================

# Slack webhook for deployment notifications (optional)
SLACK_WEBHOOK_URL=your_slack_webhook_url_here

# Discord webhook for alerts (optional)
DISCORD_WEBHOOK_URL=your_discord_webhook_url_here

# Email for critical alerts (optional)
ALERT_EMAIL=your_email@example.com

# ============================================
# TESTING CONFIGURATION
# ============================================

# Skip FHE tests (if FHE dependencies not available)
SKIP_FHE_TESTS=false

# Test timeout in milliseconds
TEST_TIMEOUT=40000

# Enable verbose test output
VERBOSE_TESTS=false

# ============================================
# FRONTEND INTEGRATION
# ============================================

# Contract addresses (auto-populated after deployment)
CONTRACT_ADDRESS_FOOD_SAFETY=your_contract_address_here

# Frontend API endpoint
FRONTEND_API_URL=http://localhost:3000

# CORS allowed origins
CORS_ORIGINS=http://localhost:3000,https://yourdomain.com

# ============================================
# SECURITY FEATURES
# ============================================

# Enable security checks before deployment
SECURITY_CHECKS=true

# Enable audit logging
AUDIT_LOGGING=true

# Rate limiting (requests per minute)
RATE_LIMIT=100

# Enable IP whitelist (comma-separated)
IP_WHITELIST=127.0.0.1,::1

# ============================================
# DEVELOPER OPTIONS
# ============================================

# Enable debug mode
DEBUG=false

# Log level (error, warn, info, debug)
LOG_LEVEL=info

# Enable source maps for debugging
SOURCEMAPS=true

# Enable hot reload for development
HOT_RELOAD=false

# ============================================
# OPTIMIZATION FLAGS
# ============================================

# Solidity optimizer runs (higher = better for frequently called functions)
OPTIMIZER_RUNS=800

# Enable Yul optimizer
YUL_OPTIMIZER=true

# Enable via-IR compilation (advanced optimization)
VIA_IR=false

# ============================================
# BACKUP & RECOVERY
# ============================================

# Backup private key location (encrypted)
BACKUP_KEY_PATH=/secure/path/to/backup

# Recovery phrase (NEVER commit this!)
RECOVERY_PHRASE=your_twelve_word_recovery_phrase_here

# Backup frequency (hours)
BACKUP_FREQUENCY=24

# ============================================
# NOTES
# ============================================
# 1. Copy this file to .env and fill in your values
# 2. Never commit .env to version control
# 3. Use environment-specific .env files (.env.development, .env.production)
# 4. Rotate keys regularly
# 5. Use hardware wallets for production deployments
# 6. Enable multi-sig for critical operations
# 7. Test all configurations on testnet first
